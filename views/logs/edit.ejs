<%- include('../partials/head') %>
<%- include('../partials/header') %>
<h1>Edit log</h1>
<a class="button" href="/logs/<%= foundLog._id %>">Go back</a>
<form action="/logs/<%= foundLog._id %>?_method=PUT" method="POST">
    <label for="title">
        Title
        <input id="title" type="text" name="title" value="<%= foundLog.title %>" autofocus required>
    </label>
    <label for="entry">
        Entry
        <textarea id="entry" name="entry" cols="30" rows="10" required><%= foundLog.entry %></textarea>
    </label>
    <label for="shipIsBroken">
        Ship is broken?
        <input id="shipIsBroken" type="checkbox" name="shipIsBroken" <% if(foundLog.shipIsBroken){ %> checked <% } %>>
    </label>
    <button class="button" type="submit">Save</button>
</form>
<%- include('../partials/footer') %>